
# Genkit AI Configuration
GOOGLE_API_KEY=YOUR_GOOGLE_AI_API_KEY_HERE

# CoinMarketCap API Key (for Stats page)
COINMARKETCAP_API_KEY=YOUR_COINMARKETCAP_API_KEY_HERE

# Next.js App Backend URL (if you have a separate custom backend, not Supabase)
# NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# Supabase Project Configuration (for client-side interactions)
NEXT_PUBLIC_SUPABASE_URL=YOUR_SUPABASE_PROJECT_URL_HERE
NEXT_PUBLIC_SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY_HERE

# Direct Supabase PostgreSQL Connection Details (for server-side API routes if needed)
# These are typically used by a Node.js backend or Next.js API routes connecting directly.
# Ensure your Supabase project's network restrictions allow connections if not from localhost.
DB_DIALECT=postgres
DB_HOST=YOUR_SUPABASE_DB_HOST_HERE # e.g., db.xxxxxxxx.supabase.co
DB_USER=postgres # Usually 'postgres', confirm if different
DB_PASSWORD=YOUR_SUPABASE_DB_PASSWORD_HERE # Replace with your actual database password
DB_NAME=postgres # Usually 'postgres', confirm if different
DB_PORT=5432 # Default PostgreSQL port
